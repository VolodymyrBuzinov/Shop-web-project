    {{#each this}}
<li class="card__item card__item category-cards__item slider-item swiper-slide" data-category={{category}}
    data-description={{"description"}} data-id={{_id}} data-phone={{phone}} data-userID={{userId}} data-category={{category}}
    data-title={{title}} data-price={{price}} data-images={{imageUrls}} data-card-id={{_id}}
